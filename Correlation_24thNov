import numpy as np# numerical python  , to manage the array and series
import pandas as pd   #to manage dataframe 
import matplotlib.pyplot as plt # graph 

data = pd.read_csv('https://www.dropbox.com/s/4jgheggd1dak5pw/data_visualization.csv?raw=1', index_col=0)

col = data.columns # list of columns
#print(col)
#print(type(col))
col = list(col)
print(col)

print(type(col))

#df = data[['wind','arrow']]
df = data  #all data 

#print(data)
corr = df.corr()
#print(corr)
#print(type(corr))

out = corr.values  # convert dataframe to list
res = [col,out[0]]

print(res)




